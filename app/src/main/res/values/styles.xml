<resources>

    <!-- Base application theme. -->
    <style name="AppTheme2" parent="AppTheme.base">
        <!-- Customize your theme here. -->
    </style>

    <style name="AppTheme.base" parent="Theme.AppCompat.NoActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:windowBackground">@color/white</item>

        <!-- translucent system bars -->
        <item name="android:windowTranslucentStatus">true</item>
        <!--<item name="android:windowTranslucentNavigation">true</item>-->

        <!-- <item name="android:spinnerStyle">@style/AppSpinner</item>-->
    </style>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>

        <!--<item name="android:windowContentOverlay">@null</item>-->
    </style>

    <style name="AppTheme.Button.Colored.Yellow" parent="Widget.AppCompat.Button.Colored">
        <item name="colorButtonNormal">@color/yellow</item>
        <item name="android:textColor">@color/white</item>
    </style>

</resources>
