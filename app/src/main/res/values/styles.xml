<resources>

    <!-- Base application theme. -->
    <style name="AppTheme2" parent="AppTheme.base">
        <!-- Customize your theme here. -->
    </style>

    <style name="splashScreenTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="android:windowBackground">@color/secondary_text_white_color</item>
    </style>

    <style name="AppTheme.base" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:windowBackground">@color/white</item>

        <item name="android:textColorHint">@color/disabled_text_dark_color</item>
        <item name="colorControlNormal">@color/disabled_text_dark_color</item>
        <item name="colorControlActivated">@color/secondary_text_white_color</item>
        <item name="colorControlHighlight">@color/secondary_text_white_color</item>

        <!-- translucent system bars -->
        <item name="android:windowTranslucentStatus">true</item>
        <!--<item name="android:windowTranslucentNavigation">true</item>-->

        <!-- <item name="android:spinnerStyle">@style/AppSpinner</item>-->
    </style>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>

        <!--<item name="android:windowContentOverlay">@null</item>-->
    </style>

    <style name="AppTheme.Button.Colored.Yellow" parent="Widget.AppCompat.Button.Colored">
        <item name="colorButtonNormal">@color/yellow</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="AppTheme.Button.Colored.primary" parent="Widget.AppCompat.Button.Colored">
        <item name="colorButtonNormal">@color/colorPrimaryDark</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="Thing_create_enEdit_input" parent="TextAppearance.AppCompat">
        //hint color And Label Color in False State
        <item name="android:textColorHint">@color/secondary_text_dark_color</item>
        <!--<item name="android:textSize">20sp</item>-->
        //Label color in True State And Bar Color False And True State
        <item name="colorAccent">@color/secondary_text_dark_color</item>
        <item name="colorControlNormal">@color/secondary_text_dark_color</item>
        <item name="colorControlActivated">@color/secondary_text_dark_color</item>
    </style>
</resources>
